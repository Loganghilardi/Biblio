<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bibliothèque{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul id="navigation">
                    <li><a href="{{ path('home')}}" title="Page d'accueil">Accueil</a></li>
                    <li><a href="{{ path('biblio') }}" title="La Bibliothèque">Bibliothèque</a></li>

                    {% if not app.user %}
                    <li><a href="{{path('security_login')}}" title="Connexion">Espace Admin</a></li>
                    {% else %}
                    <li><a href="{{ path('biblio_new') }}" title="Ajout">Ajouter un livre</a></li>
                    <li><a href="{{ path('security_registration') }}" title="Ajout">Créer un compte admin</a></li>


                    <li ><a class="deco" href="{{path('security_logout')}}" title="Déconnexion">Déconnexion</a></li>
                    {% endif %}


                  </ul>
            </nav>
      </header>
        <div class="container">{% block body %}{% endblock %} </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
